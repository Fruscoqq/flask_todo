pipeline{
        agent any
        environment {
            DATABASE_URI = credentials("DB_URI")
        }
        stages{
            stage('Setup'){
                steps{
                    sh "bash application/jenkins/setup.sh"
                }
            }
            stage('Test'){
                steps{
                    sh "bash application/jenkins/test.sh"
                }
            } 
            stage('Create Schema'){
                steps{
                    sh "python3 create.py"
                }
            }
            stage('Run'){
                steps{
                    sh "python3 app.py"
                }
            }
        }
}