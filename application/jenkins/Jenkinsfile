pipeline{
        agent any
        stages{
            stage('Bin bashing'){
                steps{
                    sh "#!/bin/bash"
                }
            }
            stage('Exporting global variables'){
                steps{
                    sh "export DATABASE_URI"
                }
            }
            stage('Installing apt dependencies'){
                steps{
                    sh "sudo apt update"
                    sh "sudo apt install python3-venv python3-pip python3 -y"
                    sh 'echo "Its working"'
                }
            }
        }
}